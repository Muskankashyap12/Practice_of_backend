<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
        <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10 ">
        <div class="flex justify-end w-full ">
       <a href="/logout" class="bg-red-500 rounded-md  px-3 py-2 text-sm inline-block mb-5">Logout</a>
        </div>
        <div class="flex items-start gap-3 ">

      <div class="w-15 h-15 rounded-md overflow-hidden ">
      <a href="/profile/upload"><img class="w-full h-full object-cover" src="/images/uploads/<%= user.profilepic %>" alt=""></a>  
      </div>
        <h3 class="text-3xl "><span class="font-light">Hello ,</span> <%= user.name%></h3>
        </div>
        
      <h5 class="mb-5 mt-3">You can create the new post</h5>
      <form action="/post" method="post" class="">
        <textarea placeholder="what is in your mind ?" name="content" class="p-3 outline-none w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md"></textarea>
      
 <input type="submit" class="px-3 py-2 bg-blue-500 block rounded-md mt-2 w-40" value="Create new post">
   </form>
   <div class="posts mt-20">
    <h3 class="text-zinc-400">Your post</h3>
    <div class="postcontainer mt-5 ">
       <% user.posts.reverse().forEach(function(post){%>
           <div class="post w-1/3 p-4  mb-4 rounded-md bg-zinc-800 border-[1px] border-zinc-700" >
            <h4 class="text-blue-500 mb-2"><%= user.username%></h4>
            <p class="tracking-tight text-sm"><%= post.content %></p>
                  <small class="mt-2 inline-block"><%= post.likes.length%> likes</small>   
            <div class="btns flex mt-1 gap-4 ">
                <a href="/like/<%=post._id %>" class="text-blue-500">

                  <%= post.likes.indexOf(user._id)=== -1 ?  "Like" :"unlike" %>
                </a>
                <a href="/edit/<%= post._id%>" class="text-zinc-600">Edit</a>
            </div>
        
        </div>

      <% })%>
    </div>
   </div>
    </div>
    
</body>
</html>